# Ejemplo de archivo .env para Docker Compose
# Copia este archivo como .env y personaliza según necesites

# =============================================================================
# PUERTOS DE LA APLICACIÓN
# =============================================================================
STREAMLIT_PORT=8501
JUPYTER_PORT=8888
MLFLOW_PORT=5000

# =============================================================================
# CONFIGURACIÓN DE STREAMLIT
# =============================================================================
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# =============================================================================
# CONFIGURACIÓN DE PYTHON
# =============================================================================
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# =============================================================================
# AUTOML CONFIGURATION
# =============================================================================

# Backend de AutoML a utilizar
# Opciones: flaml (default, cross-platform), autosklearn (solo Linux)
AUTOML_BACKEND=flaml

# Tiempo máximo de búsqueda en segundos
# Presets recomendados:
#   - quick: 300 (5 minutos)
#   - balanced: 3600 (1 hora)
#   - high_performance: 14400 (4 horas)
#   - overnight: 28800 (8 horas)
AUTOML_TIME_BUDGET=3600

# Métrica de optimización
# Clasificación: roc_auc, f1, balanced_accuracy, precision, recall, log_loss
# Regresión: r2, mse, mae
AUTOML_METRIC=roc_auc

# Instalar auto-sklearn durante el build (solo Linux)
# Opciones: true, false
# Nota: Aumenta significativamente el tiempo de build (~10-15 min)
INSTALL_AUTOSKLEARN=false

# =============================================================================
# CONFIGURACIÓN DE JUPYTER (para modo desarrollo)
# =============================================================================
JUPYTER_ENABLE_LAB=yes
JUPYTER_TOKEN=
JUPYTER_PASSWORD=

# =============================================================================
# MLFLOW
# =============================================================================
MLFLOW_TRACKING_URI=file:///app/mlruns

# =============================================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =============================================================================
APP_ENV=development
LOG_LEVEL=INFO
RANDOM_SEED=42

# Número de workers (si usas gunicorn u otro servidor)
WORKERS=1
THREADS=4

# =============================================================================
# LÍMITES DE RECURSOS (opcional)
# =============================================================================
# MEMORY_LIMIT=2g
# CPU_LIMIT=2
